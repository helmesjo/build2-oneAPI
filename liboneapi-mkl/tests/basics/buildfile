import libs = liboneapi-mkl%libs{mkl}

for t : cxx{* -mkl-sycl -mkl-thread-gnu}
{
  n = $name($t)
  ./: exe{test-$n}: $t $libs
}

# Disable until intel-mpi (liboneapi-mpi) has been packaged.
#
exe{test-mkl-cluster-ilp64}: test = false
exe{test-mkl-cluster-lp64}:  test = false

exe{test-mkl-thread-gnu}: test = ($cc.target.class == 'linux')
